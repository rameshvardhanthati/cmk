<mvc:View
    controllerName="com.changemaker.home.homepage.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:w="sap.ui.integration.widgets"
    xmlns:cssgrid="sap.ui.layout.cssgrid"
    xmlns:l="sap.ui.layout"
>
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page">
                    <content>
                        <Title
                            text="Open Projects"
                            titleStyle="H3"
                            class="sapUiSmallMarginBottom sapUiSmallMarginTop sapUiSmallMarginBegin" />
                        <f:GridContainer>
                            <f:layout>
                                <f:GridContainerSettings rowSize="5rem" columnSize="5rem" gap="1rem" />
                            </f:layout>
                            <f:layoutS>
                                <f:GridContainerSettings rowSize="5rem" columnSize="5rem" gap="0.5rem" />
                            </f:layoutS>
                            <w:Card class="sapUiMediumMarginBegin" manifest="./openproject_card.json" width="100%">
                                <w:layoutData>
                                    <f:GridContainerItemLayoutData columns="4" />
                                </w:layoutData>
                            </w:Card>
                        </f:GridContainer>            
                        <Title
                            text="Projects"
                            titleStyle="H3"
                            class="sapUiSmallMarginBottom sapUiSmallMarginTop sapUiSmallMarginBegin" />
                        <f:GridContainer>
                            <f:layout>
                                <f:GridContainerSettings rowSize="5rem" columnSize="5rem" gap="1rem" />
                            </f:layout>
                            <f:layoutS>
                                <f:GridContainerSettings rowSize="5rem" columnSize="5rem" gap="0.5rem" />
                            </f:layoutS>
                            	<l:HorizontalLayout class="sapUiContentPadding" >

                            <GenericTile class="sapUiSmallMarginBegin sapUiTinyMarginTop tileLayout" header="Project List" subheader="View All Projects" press="pressProjectList">
                                <TileContent>
                                    <NumericContent icon="sap-icon://documents" withMargin="false" />
                                </TileContent>
                            </GenericTile>

                            <GenericTile class="sapUiSmallMarginBegin sapUiTinyMarginTop tileLayout" header="Create Project" subheader="Launch Wizard" press="handleUrlPress">
                                <TileContent>
                                    <NumericContent icon="sap-icon://create-form" withMargin="false" />
                                </TileContent>
                            </GenericTile>
                            </l:HorizontalLayout>                            
                            
                        </f:GridContainer>
                        <Title
                            text="Customers"
                            titleStyle="H3"
                            class="sapUiSmallMarginBottom sapUiSmallMarginTop sapUiSmallMarginBegin" />
                        <f:GridContainer>
                            <f:layout>
                                <f:GridContainerSettings rowSize="5rem" columnSize="5rem" gap="1rem" />
                            </f:layout>
                            <f:layoutS>
                                <f:GridContainerSettings rowSize="5rem" columnSize="5rem" gap="0.5rem" />
                            </f:layoutS>
                            <l:HorizontalLayout class="sapUiContentPadding" >
                            <GenericTile class="sapUiSmallMarginBegin sapUiTinyMarginTop tileLayout" header="Customer List" subheader="View All Customers" press="pressCustomerList">
                                <TileContent>
                                    <NumericContent icon="sap-icon://person-placeholder" withMargin="false" />
                                </TileContent>
                            </GenericTile>
                            <GenericTile class="sapUiSmallMarginBegin sapUiTinyMarginTop tileLayout" header="Create Customer" subheader="Launch Wizard" press="pressCustomerWizard">
                                <TileContent>
                                    <NumericContent icon="sap-icon://add-contact" withMargin="false" />
                                </TileContent>
                            </GenericTile>
                            </l:HorizontalLayout> 
                        </f:GridContainer>
                        <Title
                            text="Useful Links"
                            titleStyle="H3"
                            class="sapUiSmallMarginBottom sapUiSmallMarginTop sapUiSmallMarginBegin" />
                        <f:GridContainer>
                            <f:layout>
                                <f:GridContainerSettings rowSize="20rem" columnSize="20rem" gap="5rem" />
                            </f:layout>
                            <f:layoutS>
                                <f:GridContainerSettings rowSize="20rem" columnSize="20rem" gap="5rem" />
                            </f:layoutS>
                            <w:Card class="sapUiMediumMarginBegin" manifest="./manifest_card.json" width="100%"/>
                        </f:GridContainer>

                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
